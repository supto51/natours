header.header 
  nav.nav.nav--tours 
    a.nav__el(href="/") All Tours
  .header__logo 
    img(src="/img/logo-white.png", alt="Natours Logo")
  nav.nav.nav--user 
    if user
      a.nav__el.nav__el--logout Log Out 
      a(href="/account").nav__el
        img(src=`/img/users/${user.photo}`, alt=`${user.name}`).nav__user-img
        span= user.name.split(" ")[0]
    else 
      a.nav__el.nav__el--cta(href="/login") Login
      a.nav__el.nav__el--cta Sign Up 